    "@types/express": "^5.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "express": "^4.21.2",
    "octokit": "^4.1.2",
    "pg": "^8.14.1",
    "tsx": "^4.19.3"
  }
}
